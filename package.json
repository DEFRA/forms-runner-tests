{
  "name": "forms-runner-tests",
  "version": "1.0.0",
  "description": "E2E tests for DEFRA Forms Runner",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:parser": "npx playwright test form-parser",
    "report": "npx playwright show-report",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "inspect": "node src/helpers/inspect-form.js",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.js\" \"**/*.{js,cjs,md,json,config.js,test.js}\"",
    "format:check": "prettier --check \"src/**/*.js\" \"**/*.{js,cjs,md,json,config.js,test.js}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.2",
    "eslint-plugin-jsdoc": "^61.5.0",
    "neostandard": "^0.12.2"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "joi": "^18.0.2",
    "prettier": "^3.7.4",
    "randexp": "^0.5.3"
  }
}
